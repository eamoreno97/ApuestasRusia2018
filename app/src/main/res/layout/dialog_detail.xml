<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="378dp"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/flagsTeamA"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/circle" />

    <EditText
        android:id="@+id/numberBetsA"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/flagsTeamA"
        android:layout_toRightOf="@+id/flagsTeamA"
        android:width="80dp"
        android:hint="Points"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/flagsTeamB"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/circle" />

    <EditText
        android:id="@+id/numberBetsB"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/flagsTeamB"
        android:layout_toStartOf="@+id/flagsTeamB"
        android:width="80dp"
        android:hint="Points"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/betHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/flagsTeamA"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/flagsTeamA"
        android:layout_toRightOf="@+id/flagsTeamA"
        android:text="Add Points!"
        android:textColor="@color/colorUnderline"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/betAway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/flagsTeamB"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/flagsTeamB"
        android:layout_toStartOf="@+id/flagsTeamB"
        android:text="Add Points!"
        android:textColor="@color/colorUnderline"
        android:textSize="12dp" />
</RelativeLayout>